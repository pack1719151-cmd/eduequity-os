# EduEquity OS - API Environment Variables
# Copy this file to .env and fill in the values

# Application Environment
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-change-in-production

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Cookie Settings
COOKIE_NAME=eduequity_session

# Database (leave empty for SQLite)
# DATABASE_URL=postgresql://user:password@host:port/dbname
# SQLite will be used by default if not set
SQLITE_URL=sqlite:///./eduequity.db

# CORS Configuration
# List of allowed origins separated by commas
# For local development: http://localhost:3000,http://127.0.0.1:3000
# For production: https://your-frontend.vercel.app
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://*.vercel.app,https://*.eduequity.com

# Allow credentials in CORS (required for cookies)
CORS_ALLOW_CREDENTIALS=true

# Frontend URL (for redirects)
FRONTEND_URL=http://localhost:3000

# Production domain for cookie settings
# PRODUCTION_DOMAIN=onrender.com

# Logging
LOG_LEVEL=INFO

